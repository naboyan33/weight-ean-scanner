<manifest package="com.offalmeat.weightean" xmlns:android="http://schemas.android.com/apk/res/android">
    <application
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:allowBackup="true"
        android:supportsRtl="true">
        <activity android:name=".SettingsActivity" />
        <activity android:name=".HistoryActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <receiver
            android:name=".ScanBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.sunmi.scanner.ACTION_DATA_CODE_RECEIVED"/>
                <action android:name="com.sunmi.intent.action.SCAN_RESULT"/>
            </intent-filter>
        </receiver>
    </application>
</manifest>
